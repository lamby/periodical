<html>
<head>
  <title>The Spectator - {{ date }}</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
</head>
<body>
  <h1>The Spectator - {{ date }}</h1>

  <ul>
    {% for key, group in grouped %}
    <li>
      {% if group|length == 1 %}
        {{ key }}:
        {% for article in group %}
          <a href="#a{{ article.idx }}">{{ article.title }}</a>
          {% if article.author and article.author != article.category %}
            ({{ article.author }})
          {% endif %}
        {% endfor %}
      {% else %}
        {{ key }}

        <ul>
          {% for article in group %}
          <li>
            <a href="#a{{ article.idx }}">{{ article.title }}</a>
            {% if article.author %}
              ({{ article.author }})
            {% endif %}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>

  {% for article in articles %}
    <hr>

    <h2 id="a{{ article.idx }}">
      <a href="{{ article.url }}">{{ article.title }}</a>
    </h2>

    {% if article.subtitle %}
    <h3><em>{{ article.subtitle }}</em></h3>
    {% endif %}

    {% if article.author %}
      <h4>{{ article.author }}</h4>
    {% endif %}

    {% if article.image %}
      <img src="{{ article.image }}">
    {% endif %}

    {{ article.body }}
  {% endfor %}
</body>
</html>
